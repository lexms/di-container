{
  "name": "@lexms/di-container",
  "version": "1.1.0",
  "description": "A lightweight dependency injection container for TypeScript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "biome lint .",
    "lint:fix": "biome lint . --apply",
    "format": "biome format .",
    "format:fix": "biome format . --write",
    "check": "biome check .",
    "check:fix": "biome check . --write"
  },
  "keywords": [
    "dependency-injection",
    "di",
    "container",
    "ioc",
    "inversion-of-control",
    "typescript"
  ],
  "author": "lexms",
  "license": "MIT",
  "dependencies": {
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.0",
    "jest": "^29.7.0",
    "semantic-release": "^24.2.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lexms/di-container.git"
  },
  "bugs": {
    "url": "https://github.com/lexms/di-container/issues"
  },
  "homepage": "https://github.com/lexms/di-container#readme"
}
